@{
    Layout = null;
    var title = ViewBag.Title ?? "Browse Coaches - FitVerse";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style2.css" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center gap-2" href="~/Client/Dashboard">
                <div class="logo-icon fs-4">💪</div>
                <span class="fw-bold fs-5 text-primary">FitVerse</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Dashboard" ? "active" : "")" href="~/Client/Dashboard">
                            <i class="bi bi-speedometer2 me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Coaches" ? "active" : "")" href="~/Client/Coaches">
                            <i class="bi bi-person-badge me-1"></i> Coaches
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Packages" ? "active" : "")" href="~/Client/Packages">
                            <i class="bi bi-box-seam me-1"></i> Packages
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Workouts" ? "active" : "")" href="~/Client/Workouts">
                            <i class="bi bi-lightning me-1"></i> Workouts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Progress" ? "active" : "")" href="~/Client/Progress">
                            <i class="bi bi-graph-up me-1"></i> Progress
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Chat" ? "active" : "")" href="~/Client/Chat">
                            <i class="bi bi-chat-dots me-1"></i> Chat
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link position-relative @(ViewBag.Active == "Notifications" ? "active" : "")" href="~/Client/Notifications">
                            <i class="bi bi-bell fs-5"></i>
                            <span class="notification-badge position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">2</span>
                        </a>
                    </li>

                    <!-- User Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                            <img src="https://ui-avatars.com/api/?name=Sarah+Miller&background=6366f1&color=fff"
                                 alt="Client" class="rounded-circle" style="width:36px;height:36px;">
                            <span>Sarah Miller</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li><a class="dropdown-item" href="~/Client/Profile"><i class="bi bi-person me-2"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="~/Client/Settings"><i class="bi bi-gear me-2"></i> Settings</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" href="~/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Page Body -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center py-3 border-top small text-muted mt-auto">
        © @DateTime.Now.Year FitVerse. All Rights Reserved.
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
