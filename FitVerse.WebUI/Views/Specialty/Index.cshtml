
<div class="content-area">
    <div class="page-header">
        <h1>Specialty</h1>
        <div class="breadcrumb">
            <a href="index.html">Home</a> / <span>Specialty</span>
        </div>
    </div>

<!-- Specialty Form Section -->
<div class="form-section">
    <div class="form-card">
        <div class="form-header">
            <h3>Add New Specialty Record</h3>
            <p>Fill in the details below to add a new Specialty record</p>
        </div>
        <form id="SpecialtyForm" class="Specialty-form">
            <input type="hidden" id="Id" name="SpecialtyId" value="0">
            <div class="form-group">
                <label for="name">Name <span class="required">*</span></label>
                <div class="input-group">
                    <i class="fas fa-tag"></i>
                    <input type="text" id="name" name="name" placeholder="Enter Specialty name" required>
                </div>
            </div>

            <div class="form-actions">
                <button type="reset" class="btn btn-outline">
                    <i class="fas fa-undo"></i> Reset
                </button>
                <button type="button" id="addBtn" onclick="addSpecialty()" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Record
                </button>
                <button type="button" style="display:none" id="editBtn" onclick="updateSpecialty()" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Record
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Specialty List Section -->
<div class="table-section">
    <div class="section-header">
        <div class="section-title">
            <h3>Specialty Records</h3>
            <p class="section-subtitle">List of all Specialty records</p>
        </div>
        <div class="table-actions">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="searchSpecialty" placeholder="Search records...">
            </div>

        </div>
    </div>

    <div class="table-responsive">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="Data">
            </tbody>
        </table>
    </div>

    <div class="table-footer">
        <div class="table-info">
            Showing <span>1</span> to <span>3</span> of <span>3</span> entries
        </div>
        <div class="pagination">
            <button class="btn-icon" disabled>
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="btn-icon active">1</button>
            <button class="btn-icon" disabled>
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</div>
</div>

<!-- Confirmation Modal -->
<div class="modal" id="deleteModal">
    <div class="modal-content">
        <div class="modal-header">
            <h4>Confirm Deletion</h4>
            <button class="btn-icon close-modal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this record? This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline close-modal">Cancel</button>
            <button class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/viewjs/Specialty.js"></script>
}

