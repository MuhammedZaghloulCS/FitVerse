<!-- Interactive Anatomy JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const frontViewBtn = document.getElementById('frontViewBtn');
        const backViewBtn = document.getElementById('backViewBtn');
        const anatomyFront = document.getElementById('anatomyFront');
        const anatomyBack = document.getElementById('anatomyBack');
        const muscleTitle = document.getElementById('muscleTitle');
        const muscleDescription = document.getElementById('muscleDescription');
        const exerciseList = document.getElementById('exerciseList');
        const exercisesUl = document.getElementById('exercises');

        // Toggle between front and back view
        frontViewBtn.addEventListener('click', function() {
            anatomyFront.style.display = 'block';
            anatomyBack.style.display = 'none';
            frontViewBtn.classList.add('active');
            frontViewBtn.classList.remove('btn-outline-custom');
            frontViewBtn.classList.add('btn-primary-custom');
            backViewBtn.classList.remove('active');
            backViewBtn.classList.add('btn-outline-custom');
            backViewBtn.classList.remove('btn-primary-custom');
            resetMuscleInfo();
        });

        backViewBtn.addEventListener('click', function() {
            anatomyFront.style.display = 'none';
            anatomyBack.style.display = 'block';
            backViewBtn.classList.add('active');
            backViewBtn.classList.remove('btn-outline-custom');
            backViewBtn.classList.add('btn-primary-custom');
            frontViewBtn.classList.remove('active');
            frontViewBtn.classList.add('btn-outline-custom');
            frontViewBtn.classList.remove('btn-primary-custom');
            resetMuscleInfo();
        });

        // Get all muscle regions
        const muscleRegions = document.querySelectorAll('.muscle-region');

        // Add hover effect
        muscleRegions.forEach(muscle => {
            muscle.addEventListener('mouseenter', function() {
                this.style.fill = '#6366f1';
                this.style.opacity = '0.7';
            });

            muscle.addEventListener('mouseleave', function() {
                this.style.fill = '#e5e7eb';
                this.style.opacity = '1';
            });

            // Add click event
            muscle.addEventListener('click', function() {
                const muscleName = this.getAttribute('data-muscle');
                const exercises = this.getAttribute('data-exercises').split(', ');

                // Update title
                muscleTitle.textContent = muscleName;
                muscleDescription.textContent = `Target your ${muscleName.toLowerCase()} with these effective exercises:`;

                // Clear and populate exercises
                exercisesUl.innerHTML = '';
                exercises.forEach(exercise => {
                    const li = document.createElement('li');
                    li.className = 'mb-2';
                    li.innerHTML = `<i class="bi bi-check-circle-fill text-success me-2"></i> ${exercise}`;
                    exercisesUl.appendChild(li);
                });

                // Show exercise list
                exerciseList.style.display = 'block';

                // Highlight selected muscle
                muscleRegions.forEach(m => {
                    m.style.fill = '#e5e7eb';
                    m.style.opacity = '1';
                });
                this.style.fill = '#6366f1';
                this.style.opacity = '0.8';
            });
        });

        function resetMuscleInfo() {
            muscleTitle.textContent = 'Select a Muscle';
            muscleDescription.textContent = 'Click on any muscle group to see targeted exercises and learn more about training that area.';
            exerciseList.style.display = 'none';
            muscleRegions.forEach(m => {
                m.style.fill = '#e5e7eb';
                m.style.opacity = '1';
            });
        }
    });
</script>