@{
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
    ViewBag.PageTitle = "Exercise Plans";
}
@model IEnumerable<FitVerse.Data.Models.ExercisePlan>

<!-- Exercise Plans Page -->
<div class="page-container">
    <div class="content-wrapper">
        <div class="exercise-plan-page-container">
            <!-- Page Header -->
            <div class="page-header-section">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="page-header-content">
                                <h1 class="page-title">
                                    <i class="bi bi-calendar-check me-3"></i>Workout Plans
                                </h1>
                                <p class="page-subtitle">Create and manage comprehensive workout plans for your clients</p>
                            </div>
                        </div>
                        <div class="col-lg-4 text-lg-end">
                            <button class="btn btn-modern-primary" data-bs-toggle="modal" data-bs-target="#createPlanModal">
                                <i class="bi bi-plus-circle me-2"></i>Create New Plan
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Plans Overview Section -->
            <div class="plans-overview-section">
                <div class="container-fluid">
                    <div class="overview-cards">
                        <div class="row g-4 mb-4">
                            <div class="col-lg-3 col-md-6">
                                <div class="overview-card">
                                    <div class="overview-icon">
                                        <i class="bi bi-collection"></i>
                                    </div>
                                    <div class="overview-content">
                                        <div class="overview-value" id="totalPlansCount">-</div>
                                        <div class="overview-label">Total Plans</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="overview-card">
                                    <div class="overview-icon">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="overview-content">
                                        <div class="overview-value" id="activeClientsCount">-</div>
                                        <div class="overview-label">Active Clients</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="overview-card">
                                    <div class="overview-icon">
                                        <i class="bi bi-lightning"></i>
                                    </div>
                                    <div class="overview-content">
                                        <div class="overview-value" id="totalExercisesCount">-</div>
                                        <div class="overview-label">Available Exercises</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="overview-card">
                                    <div class="overview-icon">
                                        <i class="bi bi-clock"></i>
                                    </div>
                                    <div class="overview-content">
                                        <div class="overview-value" id="avgDurationWeeks">-</div>
                                        <div class="overview-label">Avg Duration (weeks)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Plans Grid Section -->
            <div class="plans-section">
                <div class="container-fluid">
                    <div class="plans-grid" id="plansContainer">
                        <!-- Loading State -->
                        <div class="loading-state" id="loadingState">
                            <div class="loading-spinner">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading workout plans...</span>
                                </div>
                            </div>
                            <p class="loading-text">Loading your workout plans...</p>
                        </div>
                        <!-- Plans load dynamically -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Create Plan Modal -->
<div class="modal fade" id="createPlanModal" tabindex="-1" aria-labelledby="createPlanModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <i class="bi bi-calendar-plus"></i>
                    </div>
                    <div class="modal-title-content">
                        <h5 class="modal-title" id="createPlanModalLabel">Create Workout Plan</h5>
                        <p class="modal-subtitle">Design a comprehensive workout plan for your clients</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="modal-body modern-modal-body">
                <form id="createPlanForm" class="modern-form">
                    <div class="row g-4">
                        <!-- Left side: Plan details -->
                        <div class="col-lg-5">
                            <div class="plan-details-section">
                                <h6 class="section-title mb-4">
                                    <i class="bi bi-info-circle me-2"></i>Plan Details
                                </h6>
                                
                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-tag me-2"></i>Plan Name
                                    </label>
                                    <input type="text" name="Name" class="form-control modern-form-control" 
                                           placeholder="e.g., Full Body Strength Training" required>
                                    <div class="form-help">Enter a descriptive name for the workout plan</div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-person me-2"></i>Assign to Client
                                    </label>
                                    <div class="client-selector-wrapper">
                                        <select name="ClientId" id="clientSelector" class="form-control modern-form-control" required>
                                            <option value="">Select a client...</option>
                                            <!-- Options will be loaded dynamically -->
                                        </select>
                                        <div class="client-selector-loading" id="clientSelectorLoading" style="display: none;">
                                            <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                            Loading clients...
                                        </div>
                                    </div>
                                    <div class="form-help">Choose which client this workout plan is for</div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-calendar-range me-2"></i>Duration (weeks)
                                    </label>
                                    <input type="number" name="DurationWeeks" class="form-control modern-form-control" 
                                           placeholder="8" min="1" max="52">
                                    <div class="form-help">Recommended duration for this plan</div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-text-paragraph me-2"></i>Plan Description
                                    </label>
                                    <textarea name="Notes" class="form-control modern-form-control" rows="4" 
                                              placeholder="Describe the plan objectives, target audience, and key benefits..."></textarea>
                                    <div class="form-help">Provide detailed information about this workout plan</div>
                                </div>
                            </div>
                        </div>

                        <!-- Right side: Exercises selection -->
                        <div class="col-lg-7">
                            <div class="exercises-selection-section">
                                <h6 class="section-title mb-4">
                                    <i class="bi bi-lightning me-2"></i>Select Exercises
                                </h6>
                                
                                <div class="exercises-search mb-3">
                                    <div class="search-input-wrapper">
                                        <i class="bi bi-search search-icon"></i>
                                        <input type="text" id="exerciseSearchInput" class="form-control modern-search-input" 
                                               placeholder="Search exercises...">
                                    </div>
                                </div>

                                <div class="exercises-container">
                                    <div id="exerciseCheckboxes" class="exercises-grid">
                                        <!-- Loading state -->
                                        <div class="exercises-loading">
                                            <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                            Loading exercises...
                                        </div>
                                        <!-- checkboxes will load here via AJAX -->
                                    </div>
                                </div>

                                <div class="selected-exercises-summary mt-3">
                                    <div class="summary-card">
                                        <div class="summary-content">
                                            <span class="summary-label">Selected Exercises:</span>
                                            <span class="summary-count" id="selectedExercisesCount">0</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer modern-modal-footer">
                <button type="button" class="btn btn-outline-secondary modern-btn" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary modern-btn" id="savePlanBtn">
                    <i class="bi bi-check-circle me-2"></i>Create Plan
                </button>
            </div>
        </div>
    </div>
</div>

<!-- View Plan Details Modal -->
<div class="modal fade" id="viewPlanModal" tabindex="-1" aria-labelledby="viewPlanModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <i class="bi bi-eye"></i>
                    </div>
                    <div class="modal-title-content">
                        <h5 class="modal-title" id="viewPlanModalLabel">Plan Details</h5>
                        <p class="modal-subtitle">View workout plan information and exercises</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body modern-modal-body" id="viewPlanContent">
                <!-- Plan details will be loaded here -->
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading plan details...</p>
                </div>
            </div>
            <div class="modal-footer modern-modal-footer">
                <button type="button" class="btn btn-secondary modern-btn" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Plan Modal -->
<div class="modal fade" id="editPlanModal" tabindex="-1" aria-labelledby="editPlanModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <i class="bi bi-pencil"></i>
                    </div>
                    <div class="modal-title-content">
                        <h5 class="modal-title" id="editPlanModalLabel">Edit Workout Plan</h5>
                        <p class="modal-subtitle">Modify plan details and exercise selection</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body modern-modal-body">
                <form id="editPlanForm" class="modern-form">
                    <input type="hidden" id="editPlanId" name="Id">
                    <div class="row g-4">
                        <!-- Left side: Plan details -->
                        <div class="col-lg-5">
                            <div class="plan-details-section">
                                <h6 class="section-title mb-4">
                                    <i class="bi bi-info-circle me-2"></i>Plan Details
                                </h6>
                                
                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-tag me-2"></i>Plan Name
                                    </label>
                                    <input type="text" name="Name" id="editPlanName" class="form-control modern-form-control" required>
                                </div>

                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-person me-2"></i>Assigned Client
                                    </label>
                                    <select name="ClientId" id="editClientSelector" class="form-control modern-form-control" required>
                                        <option value="">Select a client...</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-calendar-range me-2"></i>Duration (weeks)
                                    </label>
                                    <input type="number" name="DurationWeeks" id="editPlanDuration" class="form-control modern-form-control" min="1" max="52">
                                </div>

                                <div class="form-group">
                                    <label class="form-label modern-form-label">
                                        <i class="bi bi-text-paragraph me-2"></i>Plan Description
                                    </label>
                                    <textarea name="Notes" id="editPlanNotes" class="form-control modern-form-control" rows="4"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Right side: Exercises selection -->
                        <div class="col-lg-7">
                            <div class="exercises-selection-section">
                                <h6 class="section-title mb-4">
                                    <i class="bi bi-lightning me-2"></i>Update Exercises
                                </h6>
                                
                                <div class="exercises-search mb-3">
                                    <div class="search-input-wrapper">
                                        <i class="bi bi-search search-icon"></i>
                                        <input type="text" id="editExerciseSearchInput" class="form-control modern-search-input" 
                                               placeholder="Search exercises...">
                                    </div>
                                </div>

                                <div class="exercises-container">
                                    <div id="editExerciseCheckboxes" class="exercises-grid">
                                        <!-- Exercise checkboxes will load here -->
                                    </div>
                                </div>

                                <div class="selected-exercises-summary mt-3">
                                    <div class="summary-card">
                                        <div class="summary-content">
                                            <span class="summary-label">Selected Exercises:</span>
                                            <span class="summary-count" id="editSelectedExercisesCount">0</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer modern-modal-footer">
                <button type="button" class="btn btn-outline-secondary modern-btn" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary modern-btn" id="updatePlanBtn">
                    <i class="bi bi-check-circle me-2"></i>Update Plan
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Assign Plan Modal -->
<div class="modal fade" id="assignPlanModal" tabindex="-1" aria-labelledby="assignPlanModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <div class="modal-title-content">
                        <h5 class="modal-title" id="assignPlanModalLabel">Assign Plan to Client</h5>
                        <p class="modal-subtitle">Change the client assignment for this plan</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body modern-modal-body">
                <form id="assignPlanForm" class="modern-form">
                    <input type="hidden" id="assignPlanId" name="Id">
                    
                    <div class="current-assignment mb-4">
                        <h6 class="section-title mb-3">
                            <i class="bi bi-info-circle me-2"></i>Current Assignment
                        </h6>
                        <div class="current-client-info p-3 bg-light rounded">
                            <div class="d-flex align-items-center">
                                <div class="client-avatar me-3">
                                    <i class="bi bi-person-circle fs-2 text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold" id="currentClientName">Loading...</div>
                                    <div class="text-muted small" id="currentClientEmail"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="new-assignment">
                        <h6 class="section-title mb-3">
                            <i class="bi bi-arrow-right me-2"></i>Assign to New Client
                        </h6>
                        <div class="form-group">
                            <label class="form-label modern-form-label">
                                <i class="bi bi-person me-2"></i>Select Client
                            </label>
                            <select name="ClientId" id="assignClientSelector" class="form-control modern-form-control" required>
                                <option value="">Choose a different client...</option>
                            </select>
                            <div class="form-help">Select the client you want to assign this plan to</div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer modern-modal-footer">
                <button type="button" class="btn btn-outline-secondary modern-btn" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary modern-btn" id="confirmAssignBtn">
                    <i class="bi bi-check-circle me-2"></i>Assign Plan
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ViewJs/ExercisePlan.js"></script>
}
