    <script>
        // Enhanced functionality for the new design
        $(document).ready(function() {
            // Update modal title and subtitle based on action
            $('#addPackageModal').on('show.bs.modal', function() {
                const isEdit = !$('#editBtn').hasClass('d-none');
                $('#modalTitle').text(isEdit ? 'Edit Package' : 'Add New Package');
                
                // Update subtitle
                const subtitle = $(this).find('.modal-header p');
                subtitle.text(isEdit ? 'Update your training package details' : 'Create a comprehensive training package');
                
                // Add entrance animation to form sections
                setTimeout(() => {
                    $('.form-section').each(function(index) {
                        $(this).css({
                            'opacity': '0',
                            'transform': 'translateY(20px)'
                        }).animate({
                            'opacity': '1',
                            'transform': 'translateY(0)'
                        }, 300 + (index * 100));
                    });
                }, 100);
            });

            // Enhanced form validation feedback
            $('#PackageForm input, #PackageForm textarea').on('blur', function() {
                const $this = $(this);
                const value = $this.val().trim();
                const isRequired = $this.prop('required');
                
                // Remove previous validation classes
                $this.removeClass('is-valid is-invalid');
                
                if (isRequired && !value) {
                    $this.addClass('is-invalid');
                    showFieldError($this, 'This field is required');
                } else if (value) {
                    $this.addClass('is-valid');
                    hideFieldError($this);
                    
                    // Specific validations
                    if ($this.attr('id') === 'price') {
                        const price = parseFloat(value);
                        if (price <= 0) {
                            $this.removeClass('is-valid').addClass('is-invalid');
                            showFieldError($this, 'Price must be greater than 0');
                        }
                    } else if ($this.attr('id') === 'sessions') {
                        const sessions = parseInt(value);
                        if (sessions <= 0) {
                            $this.removeClass('is-valid').addClass('is-invalid');
                            showFieldError($this, 'Sessions must be at least 1');
                        }
                    }
                }
            });

            // Real-time character count for description
            $('#description').on('input', function() {
                const maxLength = 500;
                const currentLength = $(this).val().length;
                const remaining = maxLength - currentLength;
                
                let countElement = $(this).siblings('.char-count');
                if (countElement.length === 0) {
                    countElement = $('<div class="char-count mt-1"></div>');
                    $(this).parent().append(countElement);
                }
                
                if (remaining < 50) {
                    countElement.html(`<small class="text-warning"><i class="bi bi-exclamation-triangle me-1"></i>${remaining} characters remaining</small>`);
                } else {
                    countElement.html(`<small class="text-muted">${remaining} characters remaining</small>`);
                }
            });

            // Enhanced price formatting
            $('#price').on('input', function() {
                let value = $(this).val();
                if (value && !isNaN(value)) {
                    const formatted = parseFloat(value).toFixed(2);
                    if (value !== formatted) {
                        $(this).val(formatted);
                    }
                }
            });

            // Form section hover effects
            $('.form-section').hover(
                function() {
                    $(this).css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );

            // Helper functions for validation
            function showFieldError($field, message) {
                hideFieldError($field);
                const errorDiv = $(`<div class="invalid-feedback d-block mt-1">
                    <i class="bi bi-exclamation-circle me-1"></i>${message}
                </div>`);
                $field.parent().append(errorDiv);
            }

            function hideFieldError($field) {
                $field.parent().find('.invalid-feedback').remove();
            }

            // Clear validation on modal close
            $('#addPackageModal').on('hidden.bs.modal', function() {
                $('#PackageForm input, #PackageForm textarea').removeClass('is-valid is-invalid');
                $('.invalid-feedback').remove();
                $('.char-count').remove();
            });

            // Add status filter functionality
            $('#statusFilter').on('change', function() {
                currentPage = 1;
                loadPackagePaged();
            });

            // Add export functionality placeholder
            window.exportPackages = function() {
                Swal.fire({
                    title: 'Export Packages',
                    text: 'This feature will be implemented soon!',
                    icon: 'info',
                    confirmButtonText: 'OK'
                });
            };

            // Update stats when data loads
            function updateStats(data) {
                const total = data.length;
                const active = data.filter(p => p.IsActive).length;
                const avgPrice = total > 0 ? (data.reduce((sum, p) => sum + p.Price, 0) / total).toFixed(0) : 0;
                const totalSessions = data.reduce((sum, p) => sum + p.Sessions, 0);

                $('#totalPackages').text(total);
                $('#activePackages').text(active);
                $('#avgPrice').text(avgPrice);
                $('#totalSessions').text(totalSessions);
            }

            // Create enhanced version that will be called by the original function
            window.loadPackagePagedEnhanced = function() {
                const statusFilter = $('#statusFilter').val();
                
                $.ajax({
                    url: '/Package/GetPaged',
                    method: 'GET',
                    data: { 
                        page: currentPage, 
                        pageSize: pageSize, 
                        search: currentSearch,
                        status: statusFilter 
                    },
                    success: function (response) {
                        $('#Data').empty();

                        if (response.data.length === 0) {
                            $('#Data').append(`
                                <tr>
                                    <td colspan="5" class="empty-state">
                                        <i class="bi bi-box-seam"></i>
                                        <h6>No packages found</h6>
                                        <p class="mb-0">Try adjusting your search criteria or create a new package.</p>
                                    </td>
                                </tr>
                            `);
                            renderPagination(1, 1);
                            $('#paginationInfo').text('Showing 0 of 0 packages');
                            return;
                        }

                        response.data.forEach(item => {
                            const statusBadge = item.IsActive 
                                ? '<span class="package-status active">Active</span>'
                                : '<span class="package-status inactive">Inactive</span>';

                            $('#Data').append(`
                                <tr>
                                    <td class="package-details">
                                        <div class="package-name">${item.Name}</div>
                                        <p class="package-description">${item.Description || 'No description available'}</p>
                                    </td>
                                    <td class="text-center">
                                        <span class="package-price">${item.Price} EGP</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="package-sessions">${item.Sessions}</span>
                                    </td>
                                    <td class="text-center">${statusBadge}</td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <button type="button" onclick="getById(${item.Id})" 
                                                    class="btn btn-sm btn-outline-primary" title="Edit Package">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" onclick="Delete(${item.Id})" 
                                                    class="btn btn-sm btn-outline-danger" title="Delete Package">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            `);
                        });

                        renderPagination(response.currentPage, response.totalPages);
                        
                        const start = (response.currentPage - 1) * pageSize + 1;
                        const end = Math.min(response.currentPage * pageSize, response.totalCount || response.data.length);
                        const total = response.totalCount || response.data.length;
                        $('#paginationInfo').text(`Showing ${start}-${end} of ${total} packages`);

                        // Update stats (you might need to fetch all data for accurate stats)
                        updateStats(response.data);
                    },
                    error: function () {
                        Swal.fire("Error", "Failed to load packages.", "error");
                    }
                });
            };
        });
    </script>
