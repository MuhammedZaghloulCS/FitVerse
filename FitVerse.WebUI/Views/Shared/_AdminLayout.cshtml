                            <span class="nav-text">Users</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Coaches" ? "active" : "")"
                           asp-controller="Admin" asp-action="Coaches">
                            <div class="nav-icon"><i class="bi bi-person-badge"></i></div>
                            <span class="nav-text">Coaches</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "CoachPackages" ? "active" : "")"
                           asp-controller="Admin" asp-action="CoachPackages">
                            <div class="nav-icon"><i class="bi bi-box-seam"></i></div>
                            <span class="nav-text">Coach Packages</span>
                        </a>
                    </div>
@*                     <div class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Payments" ? "active" : "")"
                           asp-controller="Admin" asp-action="Payments">
                            <div class="nav-icon"><i class="bi bi-cash-coin"></i></div>
                            <span class="nav-text">Payments</span>
                        </a>
                    </div> *@
                </div>

                <!-- System Management -->
                <div class="nav-section">
                    <div class="nav-section-title">System</div>
                    <div class="nav-item nav-dropdown" id="systemDropdown">
                        <button class="nav-dropdown-toggle">
                            <div style="display: flex; align-items: center; gap: 1rem;">
                                <div class="nav-icon"><i class="bi bi-gear"></i></div>
                                <span class="nav-text">System Settings</span>
                            </div>
                            <i class="bi bi-chevron-down nav-dropdown-arrow"></i>
                        </button>
                        <div class="nav-dropdown-content">
                            <div class="nav-item">
                                <a class="nav-link" asp-controller="Equipment" asp-action="Index">
                                    <div class="nav-icon"><i class="bi bi-tools"></i></div>
                                    <span class="nav-text">Equipment</span>
                                </a>
                            </div>
                            <div class="nav-item">
                                <a class="nav-link" asp-controller="Anatomy" asp-action="Index">
                                    <div class="nav-icon"><i class="bi bi-person-arms-up"></i></div>
                                    <span class="nav-text">Anatomy</span>
                                </a>
                            </div>
                            <div class="nav-item">
                                <a class="nav-link" asp-controller="Muscle" asp-action="Index">
                                    <div class="nav-icon"><i class="bi bi-heart-pulse"></i></div>
                                    <span class="nav-text">Muscles</span>
                                </a>
                            </div>
                            <div class="nav-item">
                                <a class="nav-link" asp-controller="Specialty" asp-action="Index">
                                    <div class="nav-icon"><i class="bi bi-award"></i></div>
                                    <span class="nav-text">Specialties</span>
                                </a>
                            </div>
                            <div class="nav-item">
                                <a class="nav-link" asp-controller="Package" asp-action="Index">
                                    <div class="nav-icon"><i class="bi bi-box-seam"></i></div>
