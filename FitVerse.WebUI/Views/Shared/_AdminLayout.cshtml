@{
    Layout = null;
    var title = ViewBag.Title ?? "Admin Dashboard - FitVerse";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <!-- âœ… Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- âœ… Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- âœ… Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- âœ… Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body>
    <!-- âœ… Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Admin" asp-action="Dashboard">
                <div class="logo-icon">ðŸ’ª</div>
                <span>FitVerse</span>
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Users">
                            <i class="bi bi-people"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="CoachPackages">
                            <i class="bi bi-box-seam me-2"></i> Coach Packages
                        </a>
                    </li>

                    <!-- âš™ï¸ Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="systemDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-gear"></i> System
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="systemDropdown">
                            <li><a class="dropdown-item" asp-controller="Equipment" asp-action="Index"><i class="bi bi-tools me-2"></i> Equipment</a></li>
                            <li><a class="dropdown-item" asp-controller="Anatomy" asp-action="Index"><i class="bi bi-person-arms-up me-2"></i> Anatomy</a></li>
                            <li><a class="dropdown-item" asp-controller="Muscle" asp-action="Index"><i class="bi bi-heart-pulse me-2"></i> Muscles</a></li>
                            <li><a class="dropdown-item" asp-controller="Specialty" asp-action="Index"><i class="bi bi-award me-2"></i> Specialties</a></li>
                            <li><a class="dropdown-item" asp-controller="Package" asp-action="Index"><i class="bi bi-box-seam me-2"></i> Packages</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Payments">
                            <i class="bi bi-cash-coin"></i> Payments
                        </a>
                    </li>

                    <!-- ðŸ”” Notifications -->
                    <li class="nav-item position-relative">
                        <a class="nav-link notification-bell" asp-controller="Notifications" asp-action="Index">
                            <i class="bi bi-bell fs-5"></i>
                            <span class="notification-badge">5</span>
                        </a>
                    </li>

                    <!-- ðŸ‘¤ User Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <img src="https://ui-avatars.com/api/?name=Admin&background=6366f1&color=fff" alt="Admin" class="user-avatar" />
                            <span>Admin</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Profile", "Admin", new { UserName = User.Identity.Name })">
                                    <i class="bi bi-person me-2"></i> Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- âœ… Page Body -->
    <div class="container-fluid mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3 border-top small text-muted mt-auto">
        Â© @DateTime.Now.Year FitVerse. All Rights Reserved.
    </footer>

    <!-- âœ… jQuery FIRST -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- âœ… Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- âœ… SweetAlert2 (modern only, no old swal) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- âœ… Custom scripts -->
    <script src="~/js/script.js"></script>

    <!-- âœ… Page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
