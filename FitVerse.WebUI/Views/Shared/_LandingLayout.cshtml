@{
    var title = ViewBag.Title ?? "FitVerse - Your Fitness Journey Starts Here";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link rel="icon" type="image/jpeg" href="~/Images/logo2.jpg" />
    <link rel="shortcut icon" type="image/jpeg" href="~/Images/logo2.jpg" />

    <!-- ✅ Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style2.css" asp-append-version="true" />
</head>

<body style="background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);">
    <!-- ✅ Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top" style="background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <div class="brand-logo">
                    <img src="~/images/logo2.jpg" alt="FitVerse Logo" style="width:45px; height:45px; border-radius:12px; object-fit:cover;">
                </div>
                 <span class="ms-1 fw-bold">FitVerse</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#anatomy">Anatomy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#pricing">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-light ms-2" asp-controller="Account" asp-action="Register">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Body -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- ✅ Scripts -->
    <partial src="_ValidationScriptsPartial"></partial>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
