    <!-- Chart.js -->
    <!-- default scripts -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/script.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SignalR -->
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js" 
            onload="console.log('SignalR loaded successfully')" 
            onerror="console.error('Failed to load SignalR')"></script>
    
    <!-- Notification System -->
    <script>
        let notificationConnection;

        $(document).ready(function () {
            // Check if SignalR is loaded
            if (typeof signalR === 'undefined') {
                console.error('SignalR is not loaded. Please check the SignalR script reference.');
                return;
            }

            // إنشاء اتصال SignalR
            notificationConnection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .build();

            // بدء الاتصال
            notificationConnection.start().then(function () {
                console.log("Notification connection established");
                // طلب تحميل الإشعارات عند الاتصال
                notificationConnection.invoke("GetNotifications");
            }).catch(function (err) {
                console.error("Notification connection error: " + err.toString());
            });

            // استقبال إشعار جديد
            notificationConnection.on("ReceiveNotification", function (notification) {
                addNotificationToList(notification);
                showNotificationToast(notification.Content);
            });

            // تحديث عداد الإشعارات
            notificationConnection.on("UpdateNotificationCount", function (count) {
                updateNotificationCount(count);
            });

            // تحميل الإشعارات
            notificationConnection.on("LoadNotifications", function (notifications) {
                loadNotifications(notifications);
            });

            // إشعار تم قراءته
            notificationConnection.on("NotificationMarkedAsRead", function (notificationId) {
                markNotificationAsReadInUI(notificationId);
            });

            // جميع الإشعارات تم قراءتها
            notificationConnection.on("AllNotificationsMarkedAsRead", function () {
                markAllNotificationsAsReadInUI();
            });

            // النقر على "تحديد الكل كمقروء"
            $('#markAllAsRead').click(function () {
                notificationConnection.invoke("MarkAllNotificationsAsRead");
            });

            // فتح قائمة الإشعارات
            $('#notificationDropdown').on('click', function () {
                notificationConnection.invoke("GetNotifications");
            });
        });

        function updateNotificationCount(count) {
            const badge = $('#notificationCount');
            if (count > 0) {
                badge.text(count).show();
            } else {
                badge.hide();
            }
        }

        function loadNotifications(notifications) {
            const container = $('#notificationsList');
            container.empty();

            if (notifications.length === 0) {
                container.html(`
                    <div class="dropdown-item-text text-center text-muted py-3">
                        <i class="bi bi-bell-slash fs-4"></i>
                        <div>No notifications</div>
                    </div>
                `);
                return;
            }

            notifications.forEach(function (notification) {
                addNotificationToList(notification, false);
            });

            // تحديث العداد
            const unreadCount = notifications.filter(n => !n.IsRead).length;
            updateNotificationCount(unreadCount);
        }

        function addNotificationToList(notification, prepend = true) {
            const container = $('#notificationsList');
            const readClass = notification.IsRead ? '' : 'unread';
            
            const notificationHtml = `
                <div class="notification-item ${readClass}" data-id="${notification.Id}">
                    <div class="notification-content">${notification.Content}</div>
                    <div class="notification-time">${notification.CreatedAt}</div>
                </div>
            `;

            if (container.find('.dropdown-item-text').length > 0) {
                container.empty();
            }

            if (prepend) {
                container.prepend(notificationHtml);
            } else {
                container.append(notificationHtml);
            }

            // إضافة حدث النقر لتحديد الإشعار كمقروء
            container.find(`[data-id="${notification.Id}"]`).click(function () {
                if (!notification.IsRead) {
                    notificationConnection.invoke("MarkNotificationAsRead", notification.Id.toString());
                }
            });
        }

        function markNotificationAsReadInUI(notificationId) {
            $(`[data-id="${notificationId}"]`).removeClass('unread');
        }

        function markAllNotificationsAsReadInUI() {
            $('.notification-item').removeClass('unread');
        }

        function showNotificationToast(message) {
            // يمكنك استخدام مكتبة التنبيهات المفضلة لديك
            if (typeof swal !== 'undefined') {
                swal({
                    title: "New Notification",
                    text: message,
                    icon: "info",
                    timer: 3000,
                    buttons: false
                });
            }
        }
    </script>

    <!-- Enhanced Layout Functionality -->
    <script>
        $(document).ready(function () {
            // Initialize Bootstrap dropdowns
            if (typeof bootstrap !== 'undefined') {
                // Initialize all dropdowns
                var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
                var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                    return new bootstrap.Dropdown(dropdownToggleEl, {
                        boundary: 'viewport',
                        display: 'dynamic'
                    });
                });
            }

            // Sidebar toggle functionality
            $('#sidebarToggle').on('click', function (e) {
                e.preventDefault();
                $('#sidebar').toggleClass('collapsed');
                
                // Save sidebar state to localStorage
                const isCollapsed = $('#sidebar').hasClass('collapsed');
                localStorage.setItem('sidebarCollapsed', isCollapsed);
            });

            // Restore sidebar state from localStorage
            const savedState = localStorage.getItem('sidebarCollapsed');
            if (savedState === 'true') {
                $('#sidebar').addClass('collapsed');
            }

            // Enhanced mobile sidebar toggle
            function handleSidebarToggle() {
                if ($(window).width() <= 768) {
                    $('#sidebarToggle').off('click.sidebar').on('click.sidebar', function (e) {
                        e.preventDefault();
                        $('#sidebar').toggleClass('show');
                    });
                } else {
                    // Reset to desktop behavior
                    $('#sidebar').removeClass('show');
                    $('#sidebarToggle').off('click.sidebar').on('click.sidebar', function (e) {
                        e.preventDefault();
                        $('#sidebar').toggleClass('collapsed');
                        
                        const isCollapsed = $('#sidebar').hasClass('collapsed');
                        localStorage.setItem('sidebarCollapsed', isCollapsed);
                    });
                }
            }

            // Initialize sidebar behavior
            handleSidebarToggle();

            // Handle window resize
            $(window).on('resize', function () {
                handleSidebarToggle();
            });

            // Close mobile sidebar when clicking outside
            $(document).on('click', function (e) {
                if ($(window).width() <= 768) {
                    if (!$(e.target).closest('#sidebar, #sidebarToggle').length) {
                        $('#sidebar').removeClass('show');
                    }
                }
            });

            // Prevent sidebar links from closing mobile sidebar immediately
            $('#sidebar .nav-link').on('click', function () {
                if ($(window).width() <= 768) {
                    setTimeout(function () {
                        $('#sidebar').removeClass('show');
                    }, 100);
                }
            });

            // Enhanced dropdown functionality
            $('.dropdown-toggle').on('click', function (e) {
                // Ensure dropdown works properly
                const $dropdown = $(this).closest('.dropdown');
                const $menu = $dropdown.find('.dropdown-menu');
                
                // Close other dropdowns
                $('.dropdown-menu').not($menu).removeClass('show');
                
                // Toggle current dropdown
                $menu.toggleClass('show');
                
                e.stopPropagation();
            });

            // Close dropdowns when clicking outside
            $(document).on('click', function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown-menu').removeClass('show');
                }
            });

            // Prevent dropdown from closing when clicking inside
            $('.dropdown-menu').on('click', function (e) {
                e.stopPropagation();
            });

            // Close dropdown when clicking dropdown items (except for notification actions)
            $('.dropdown-item').on('click', function (e) {
                if (!$(this).hasClass('no-close')) {
                    $(this).closest('.dropdown-menu').removeClass('show');
                }
            });

            // Enhanced modal cleanup functionality
            function cleanupModal(modalId) {
                const modal = document.getElementById(modalId);
                if (modal) {
                    // Remove any lingering backdrop
                    const backdrops = document.querySelectorAll('.modal-backdrop');
                    backdrops.forEach(backdrop => backdrop.remove());
                    
                    // Reset body classes and styles
                    document.body.classList.remove('modal-open');
                    document.body.style.overflow = '';
                    document.body.style.paddingRight = '';
                    
                    // Reset modal classes
                    modal.classList.remove('show');
                    modal.style.display = 'none';
                    modal.setAttribute('aria-hidden', 'true');
                    modal.removeAttribute('aria-modal');
                    
                    // Reset form if it exists
                    const form = modal.querySelector('form');
                    if (form) {
                        form.reset();
                        // Remove validation classes
                        const inputs = form.querySelectorAll('input, select, textarea');
                        inputs.forEach(input => {
                            input.classList.remove('is-valid', 'is-invalid');
                        });
                    }
                }
            }

            // Make cleanup function globally available for external scripts
            window.cleanupModal = cleanupModal;

            // Auto-cleanup on modal hidden events
            $('.modal').on('hidden.bs.modal', function () {
                const modalId = this.id;
                setTimeout(() => cleanupModal(modalId), 100);
            });
        });
    </script>

    <!-- optional page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
