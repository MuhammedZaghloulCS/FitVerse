@* Views/Shared/_CoachLayout.cshtml *@
@{
    var title = ViewBag.Title ?? "Coach Dashboard - FitVerse";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- ‚úÖ Custom CSS -->
    <link rel="stylesheet" href="~/css/style2.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f9fafb;
        }

        .navbar-custom {
            background-color: #111827;
            padding: 0.75rem 1rem;
        }

        .navbar-custom .nav-link,
        .navbar-custom .navbar-brand {
            color: #fff !important;
            font-weight: 500;
        }

        .navbar-custom .nav-link.active {
            color: #10b981 !important;
        }

        .navbar-custom .nav-link:hover {
            color: #10b981 !important;
        }

        .logo-icon {
            font-size: 1.5rem;
            margin-right: 0.5rem;
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
        }

        .notification-badge {
            position: absolute;
            top: 0;
            right: 2px;
            background-color: #ef4444;
            color: white;
            border-radius: 50%;
            font-size: 0.7rem;
            padding: 3px 6px;
        }

        footer {
            border-top: 1px solid #e5e7eb;
            margin-top: 2rem;
            padding-top: 1rem;
            text-align: center;
            font-size: 0.9rem;
            color: #6b7280;
        }

        .notification-item {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #f1f5f9;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .notification-item:hover {
            background-color: #f8fafc;
        }

        .notification-item.unread {
            background-color: #f0f9ff;
            border-left: 3px solid #3b82f6;
        }

        .notification-content {
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .notification-time {
            font-size: 0.75rem;
            color: #64748b;
            margin-top: 0.25rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- ‚úÖ Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <div class="logo-icon">üí™</div>
                FitVerse
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center gap-2">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Dashboard" ? "active" : "")"
                           asp-controller="Coach" asp-action="Dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Exercise" ? "active" : "")"
                           asp-controller="Exercise" asp-action="index">
                            <i class="bi bi-lightning"></i> Exercise
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Plans" ? "active" : "")"
                           asp-controller="ExercisePlan" asp-action="index">
                            <i class="bi bi-calendar-check"></i> Plans
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "DietPlans" ? "active" : "")"
                           asp-controller="Dietplan" asp-action="Index">
                            <i class="bi bi-egg-fried"></i> Diet Plans
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "MyClients" ? "active" : "")"
                           asp-controller="Coach" asp-action="MyClients">
                            <i class="bi bi-calendar-check"></i> MyClients
                        </a>
           

                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Clients" ? "active" : "")"
                           asp-controller="DailyLog" asp-action="CoachLogs">
                            <i class="bi bi-people"></i> Daily Logs
                        </a>
                    </li>
                    @* <li class="nav-item">
                        <a asp-controller="Coach" asp-action="MyClients"><i class="bi bi-people"></i> Clients</a>
                    </li> *@


                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Clients" ? "active" : "")"
                           asp-controller="Coach" asp-action="Clients">
                            <i class="bi bi-people"></i> Clients
                        </a>
                        <li class="nav-item">
                        <a class="nav-link" href="coach-daily-logs.html"><i class="bi bi-journal-text"></i> Daily Logs</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Active == "Chat" ? "active" : "")"
                           asp-controller="Chat" asp-action="CoachChat">
                            <i class="bi bi-chat-dots"></i> Chat
                        </a>
                    </li>
                    <!-- ‚úÖ Notifications -->
                    <li class="nav-item dropdown position-relative">
                        <a class="nav-link dropdown-toggle notification-bell" href="#" role="button" data-bs-toggle="dropdown" id="notificationDropdown">
                            <i class="bi bi-bell fs-5"></i>
                            <span class="notification-badge" id="notificationCount" style="display: none;">0</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end shadow-lg" style="width: 350px; max-height: 400px; overflow-y: auto;">
                            <div class="dropdown-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Notifications</h6>
                                <button class="btn btn-sm btn-link text-primary p-0" id="markAllAsRead" style="font-size: 0.8rem;">Mark all as read</button>
                            </div>
                            <div class="dropdown-divider"></div>
                            <div id="notificationsList">
                                <div class="dropdown-item-text text-center text-muted py-3">
                                    <i class="bi bi-bell-slash fs-4"></i>
                                    <div>No notifications</div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <!-- ‚úÖ User Profile -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                            <img src="https://ui-avatars.com/api/?name=Alex+Turner&background=10b981&color=fff" alt="Coach" class="user-avatar" />
                            <span>Alex Turner</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" asp-controller="Coach" asp-action="Profile"><i class="bi bi-person me-2"></i> Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Coach" asp-action="Settings"><i class="bi bi-gear me-2"></i> Settings</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ‚úÖ Main Content -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- ‚úÖ Footer -->
    <footer>
        ¬© @DateTime.Now.Year FitVerse. All Rights Reserved.
    </footer>


    <!-- Chart.js -->
    <!-- default scripts -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/script.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SignalR -->
    <script src="https://unpkg.com/@@microsoft/signalr@@8.0.0/dist/browser/signalr.min.js" 
            onload="console.log('SignalR loaded successfully')" 
            onerror="console.error('Failed to load SignalR from CDN')"></script>
    
    <!-- Notification System -->
    <script>
        let notificationConnection;

        $(document).ready(function () {
            // Check if SignalR is loaded
            if (typeof signalR === 'undefined') {
                console.error('SignalR is not loaded. Please check the SignalR script reference.');
                return;
            }

            // ÿ•ŸÜÿ¥ÿßÿ° ÿßÿ™ÿµÿßŸÑ SignalR
            notificationConnection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .build();

            // ÿ®ÿØÿ° ÿßŸÑÿßÿ™ÿµÿßŸÑ
            notificationConnection.start().then(function () {
                console.log("Notification connection established");
                // ÿ∑ŸÑÿ® ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™ ÿπŸÜÿØ ÿßŸÑÿßÿ™ÿµÿßŸÑ
                notificationConnection.invoke("GetNotifications");
            }).catch(function (err) {
                console.error("Notification connection error: " + err.toString());
            });

            // ÿßÿ≥ÿ™ŸÇÿ®ÿßŸÑ ÿ•ÿ¥ÿπÿßÿ± ÿ¨ÿØŸäÿØ
            notificationConnection.on("ReceiveNotification", function (notification) {
                addNotificationToList(notification);
                showNotificationToast(notification.Content);
            });

            // ÿ™ÿ≠ÿØŸäÿ´ ÿπÿØÿßÿØ ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™
            notificationConnection.on("UpdateNotificationCount", function (count) {
                updateNotificationCount(count);
            });

            // ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™
            notificationConnection.on("LoadNotifications", function (notifications) {
                loadNotifications(notifications);
            });

            // ÿ•ÿ¥ÿπÿßÿ± ÿ™ŸÖ ŸÇÿ±ÿßÿ°ÿ™Ÿá
            notificationConnection.on("NotificationMarkedAsRead", function (notificationId) {
                markNotificationAsReadInUI(notificationId);
            });

            // ÿ¨ŸÖŸäÿπ ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™ ÿ™ŸÖ ŸÇÿ±ÿßÿ°ÿ™Ÿáÿß
            notificationConnection.on("AllNotificationsMarkedAsRead", function () {
                markAllNotificationsAsReadInUI();
            });

            // ÿßŸÑŸÜŸÇÿ± ÿπŸÑŸâ "ÿ™ÿ≠ÿØŸäÿØ ÿßŸÑŸÉŸÑ ŸÉŸÖŸÇÿ±Ÿàÿ°"
            $('#markAllAsRead').click(function () {
                notificationConnection.invoke("MarkAllNotificationsAsRead");
            });

            // ŸÅÿ™ÿ≠ ŸÇÿßÿ¶ŸÖÿ© ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™
            $('#notificationDropdown').on('click', function () {
                notificationConnection.invoke("GetNotifications");
            });
        });

        function updateNotificationCount(count) {
            const badge = $('#notificationCount');
            if (count > 0) {
                badge.text(count).show();
            } else {
                badge.hide();
            }
        }

        function loadNotifications(notifications) {
            const container = $('#notificationsList');
            container.empty();

            if (notifications.length === 0) {
                container.html(`
                    <div class="dropdown-item-text text-center text-muted py-3">
                        <i class="bi bi-bell-slash fs-4"></i>
                        <div>No notifications</div>
                    </div>
                `);
                return;
            }

            notifications.forEach(function (notification) {
                addNotificationToList(notification, false);
            });

            // ÿ™ÿ≠ÿØŸäÿ´ ÿßŸÑÿπÿØÿßÿØ
            const unreadCount = notifications.filter(n => !n.IsRead).length;
            updateNotificationCount(unreadCount);
        }

        function addNotificationToList(notification, prepend = true) {
            const container = $('#notificationsList');
            const readClass = notification.IsRead ? '' : 'unread';
            
            const notificationHtml = `
                <div class="notification-item ${readClass}" data-id="${notification.Id}">
                    <div class="notification-content">${notification.Content}</div>
                    <div class="notification-time">${notification.CreatedAt}</div>
                </div>
            `;

            if (container.find('.dropdown-item-text').length > 0) {
                container.empty();
            }

            if (prepend) {
                container.prepend(notificationHtml);
            } else {
                container.append(notificationHtml);
            }

            // ÿ•ÿ∂ÿßŸÅÿ© ÿ≠ÿØÿ´ ÿßŸÑŸÜŸÇÿ± ŸÑÿ™ÿ≠ÿØŸäÿØ ÿßŸÑÿ•ÿ¥ÿπÿßÿ± ŸÉŸÖŸÇÿ±Ÿàÿ°
            container.find(`[data-id="${notification.Id}"]`).click(function () {
                if (!notification.IsRead) {
                    notificationConnection.invoke("MarkNotificationAsRead", notification.Id.toString());
                }
            });
        }

        function markNotificationAsReadInUI(notificationId) {
            $(`[data-id="${notificationId}"]`).removeClass('unread');
        }

        function markAllNotificationsAsReadInUI() {
            $('.notification-item').removeClass('unread');
        }

        function showNotificationToast(message) {
            // ŸäŸÖŸÉŸÜŸÉ ÿßÿ≥ÿ™ÿÆÿØÿßŸÖ ŸÖŸÉÿ™ÿ®ÿ© ÿßŸÑÿ™ŸÜÿ®ŸäŸáÿßÿ™ ÿßŸÑŸÖŸÅÿ∂ŸÑÿ© ŸÑÿØŸäŸÉ
            if (typeof swal !== 'undefined') {
                swal({
                    title: "New Notification",
                    text: message,
                    icon: "info",
                    timer: 3000,
                    buttons: false
                });
            }
        }
    </script>

    <!-- optional page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>
