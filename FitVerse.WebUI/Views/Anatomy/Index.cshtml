  @model FitVerse.Core.ViewModels.Anatomy.AnatomyDashboardVM
<!-- Anatomy Content -->
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> 
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"> 
 <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet"> 
<link rel="stylesheet" href="css/style.css"> 

<!-- Main Content -->
<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Manage Anatomy</h2>
            <p class="text-muted mb-0">Add and manage body parts and anatomical information</p>
        </div>
        <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#addAnatomyModal">
            <i class="bi bi-plus-circle"></i> Add Body Part
        </button>
    </div>
    </div>


<div class="row g-4 mb-4">
    <div class="col-lg-4 col-md-6">
        <div class="stat-card primary">
            <div class="stat-icon primary"><i class="bi bi-person-arms-up"></i></div>
            <div class="stat-value">@Model.AnatomyCount</div>
            <div class="stat-label">Body Parts</div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="stat-card success">
            <div class="stat-icon success"><i class="bi bi-heart-pulse"></i></div>
            <div class="stat-value">@Model.MuscleCount</div>
            <div class="stat-label">Linked Muscles</div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="stat-card warning">
            <div class="stat-icon warning"><i class="bi bi-lightning"></i></div>
            <div class="stat-value">@Model.ExerciseCount</div>
            <div class="stat-label">Related Exercises</div>
        </div>
    </div>
</div>

<div class="card-custom mb-4">
    <div class="card-body-custom">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <input type="text" id="searchAnatomy" class="form-control-custom w-100" placeholder="Search anatomies...">
            </div>
        </div>
    </div>
</div>


   

        <!-- Dynamic Anatomy Grid -->
        <div class="row g-4" id="anatomyContainer">
           <h4 class="fw-bold text-primary">🏋️‍♂️ Body Parts</h4>
            <!-- محتوى الأجزاء هيتضاف هنا بالـ Ajax -->
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-4">
            <div class="pagination"></div>
        </div>
    

    <!-- Add Anatomy Modal -->
    <div class="modal fade" id="addAnatomyModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 16px; border: none;">
                <div class="modal-header" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white;">
                    <h5 class="modal-title fw-bold">Add Body Part</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="anatomyForm">
                        <div class="mb-3">
                            <label class="form-label-custom">Body Part Name</label>
                            <input type="text" id="Name" name="Name" class="form-control-custom" placeholder="e.g., Chest" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label-custom">Image</label>
                            <input type="file" id="Image" name="Image" class="form-control-custom" accept="image/*">
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="saveAnatomyBtn" class="btn btn-primary-custom">Add Body Part</button>
                </div>
            </div>
        </div>
    </div>
<div class="modal fade" id="editAnatomyModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0" style="border-radius: 18px;">
            <div class="modal-header text-white"
                 style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); border: none; border-top-left-radius: 18px; border-top-right-radius: 18px;">
                <h5 class="modal-title fw-semibold">
                    <i class="bi bi-pencil-square me-2"></i> Edit Anatomy
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="editAnatomyForm">
                    <div class="mb-3">
                        <label class="form-label-custom">Anatomy Name</label>
                        <input type="text" id="editAnatomyName" class="form-control-custom" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Current Image</label>
                        <div class="text-center mb-3">
                            <img id="currentAnatomyImage" src="/Images/default.jpg" alt="Current" class="rounded shadow-sm" style="height:100px; object-fit:cover;">
                        </div>
                        <label class="form-label-custom">Change Image </label>
                        <input type="file" id="editAnatomyImage" accept="image/*" class="form-control-custom">
                        <div class="text-center mt-3">
                            <img id="editImagePreview" src="#" alt="Preview" class="rounded shadow-sm" style="display:none; height:100px; object-fit:cover;">
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button type="button" id="editSaveBtn" class="btn btn-primary-custom">
                    <i class="bi bi-check-circle me-1"></i> Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

    <!-- Muscles Modal -->
    <div class="modal fade" id="viewMusclesModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content" style="border-radius: 16px;">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="muscleModalTitle">Muscles</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row" id="musclesList">
                        <!-- العضلات هتظهر هنا -->
                    </div>
                </div>
            </div>
        </div>
    </div>


