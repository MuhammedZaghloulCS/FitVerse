@{
    ViewData["Title"] = "Image Synchronization";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-images me-2"></i>
                        Image Synchronization Tool
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>About this tool:</strong> This utility checks all images stored in the database and verifies if they exist in the wwwroot/Images folder.
                    </div>

                    <div class="mb-4">
                        <button id="syncBtn" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-repeat me-2"></i>
                            Start Synchronization
                        </button>
                    </div>

                    <!-- Results Section -->
                    <div id="resultsSection" style="display: none;">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Synchronization Results</h5>
                            </div>
                            <div class="card-body">
                                <!-- Statistics -->
                                <div class="row mb-4">
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h3 id="totalChecked" class="mb-0">0</h3>
                                                <small class="text-muted">Total Checked</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-success text-white">
                                            <div class="card-body text-center">
                                                <h3 id="imagesFound" class="mb-0">0</h3>
                                                <small>Images Found</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-danger text-white">
                                            <div class="card-body text-center">
                                                <h3 id="imagesMissing" class="mb-0">0</h3>
                                                <small>Images Missing</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-warning text-white">
                                            <div class="card-body text-center">
                                                <h3 id="imagesRenamed" class="mb-0">0</h3>
                                                <small>Images Renamed</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Logs -->
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Detailed Logs</h6>
                                    </div>
                                    <div class="card-body">
                                        <pre id="logsContainer" style="max-height: 400px; overflow-y: auto; background: #f8f9fa; padding: 15px; border-radius: 5px;"></pre>
                                    </div>
                                </div>

                                <!-- Errors (if any) -->
                                <div id="errorsSection" style="display: none;" class="mt-3">
                                    <div class="card border-danger">
                                        <div class="card-header bg-danger text-white">
                                            <h6 class="mb-0">Errors</h6>
                                        </div>
                                        <div class="card-body">
                                            <pre id="errorsContainer" style="color: red;"></pre>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" style="display: none;" class="text-center my-5">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Synchronizing images... Please wait.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#syncBtn').click(function() {
                const $btn = $(this);
                $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Synchronizing...');
                
                $('#resultsSection').hide();
                $('#loadingSpinner').show();

                $.ajax({
                    url: '/Admin/SynchronizeImages',
                    type: 'POST',
                    success: function(response) {
                        console.log('Sync response:', response);
                        
                        $('#loadingSpinner').hide();
                        $('#resultsSection').show();

                        // Update statistics
                        $('#totalChecked').text(response.totalChecked || 0);
                        $('#imagesFound').text(response.found || 0);
                        $('#imagesMissing').text(response.missing || 0);
                        $('#imagesRenamed').text(response.renamed || 0);

                        // Display logs
                        if (response.logs && response.logs.length > 0) {
                            $('#logsContainer').text(response.logs.join('\n'));
                        } else {
                            $('#logsContainer').text('No logs available.');
                        }

                        // Display errors if any
                        if (response.errors && response.errors.length > 0) {
                            $('#errorsSection').show();
                            $('#errorsContainer').text(response.errors.join('\n'));
                        } else {
                            $('#errorsSection').hide();
                        }

                        // Show success/error message
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Synchronization Complete!',
                                text: `Checked ${response.totalChecked} images. Found: ${response.found}, Missing: ${response.missing}`,
                                confirmButtonColor: '#28a745'
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Synchronization Failed',
                                text: response.message || 'An error occurred during synchronization.',
                                confirmButtonColor: '#dc3545'
                            });
                        }

                        $btn.prop('disabled', false).html('<i class="bi bi-arrow-repeat me-2"></i>Start Synchronization');
                    },
                    error: function(xhr, status, error) {
                        console.error('Sync error:', error);
                        
                        $('#loadingSpinner').hide();
                        
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'An error occurred while synchronizing images. Please check the console for details.',
                            confirmButtonColor: '#dc3545'
                        });

                        $btn.prop('disabled', false).html('<i class="bi bi-arrow-repeat me-2"></i>Start Synchronization');
                    }
                });
            });
        });
    </script>
}
