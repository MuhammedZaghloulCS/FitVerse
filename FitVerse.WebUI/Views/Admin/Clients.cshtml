                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="clientGoal">Fitness Goal</label>
                                <select class="form-control" id="clientGoal" name="Goal" required>
