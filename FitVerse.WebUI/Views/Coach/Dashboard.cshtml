            <div class="card-custom">
                <div class="card-header-custom">
                    <i class="bi bi-graph-up me-2"></i> Client Activity Overview
                </div>
                <div class="card-body-custom">
                    <canvas id="activityChart" height="80"></canvas>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card-custom">
                <div class="card-header-custom">
                    <i class="bi bi-lightning-charge me-2"></i> Quick Actions
                </div>
                <div class="card-body-custom">
                    <div class="d-grid gap-3">
                        <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#createPlanModal">
                            <i class="bi bi-plus-circle me-2"></i> Create Workout Plan
                        </button>
                        <button class="btn btn-success-custom" data-bs-toggle="modal" data-bs-target="#addExerciseModal">
                            <i class="bi bi-lightning me-2"></i> Add Exercise
                        </button>
                        <button class="btn btn-outline-custom">
                            <i class="bi bi-people me-2"></i> View All Clients
                        </button>
                        <button class="btn btn-outline-custom">
                            <i class="bi bi-chat-dots me-2"></i> Open Messages
                        </button>
                    </div>

                    <div class="divider"></div>

                    <div class="text-center">
                        <h6 class="fw-bold mb-3">Your Performance</h6>
                        <canvas id="performanceChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Clients & Pending Tasks -->
