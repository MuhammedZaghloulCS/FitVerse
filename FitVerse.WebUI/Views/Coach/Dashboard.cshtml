</div>

<!-- Create Plan Modal -->
<div class="modal fade" id="createPlanModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white; border: none;">
                <h5 class="modal-title fw-bold">Create Workout Plan</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form>
                    <div class="mb-3">
                        <label class="form-label-custom">Plan Name</label>
                        <input type="text" class="form-control-custom" placeholder="e.g., Full Body Strength Training" required>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label-custom">Assign to Client</label>
                            <select class="form-control-custom" required>
                                <option value="">Select Client</option>
                                <option>Sarah Miller</option>
                                <option>John Smith</option>
                                <option>Emma Davis</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label-custom">Duration (weeks)</label>
                            <input type="number" class="form-control-custom" placeholder="8" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Description</label>
                        <textarea class="form-control-custom" rows="3" placeholder="Describe the workout plan goals and approach..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Difficulty Level</label>
                        <select class="form-control-custom" required>
                            <option>Beginner</option>
                            <option>Intermediate</option>
                            <option>Advanced</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary-custom">Create Plan</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Exercise Modal -->
<div class="modal fade" id="addExerciseModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none;">
                <h5 class="modal-title fw-bold">Add New Exercise</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form>
                    <div class="mb-3">
                        <label class="form-label-custom">Exercise Name</label>
                        <input type="text" class="form-control-custom" placeholder="e.g., Barbell Bench Press" required>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label-custom">Muscle Group</label>
                            <select class="form-control-custom" required>
                                <option value="">Select Muscle Group</option>
                                <option>Chest</option>
                                <option>Back</option>
                                <option>Legs</option>
                                <option>Arms</option>
                                <option>Shoulders</option>
                                <option>Core</option>
                                <option>Cardio</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label-custom">Difficulty</label>
                            <select class="form-control-custom" required>
                                <option>Beginner</option>
                                <option>Intermediate</option>
                                <option>Advanced</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Equipment</label>
                        <input type="text" class="form-control-custom" placeholder="e.g., Barbell, Bench">
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Description</label>
                        <textarea class="form-control-custom" rows="4" placeholder="Detailed instructions for performing the exercise..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Video URL (Optional)</label>
                        <input type="url" class="form-control-custom" placeholder="https://youtube.com/...">
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success-custom">Add Exercise</button>
            </div>
        </div>
    </div>
</div>

