@{
    ViewData["Title"] = "Add New Coach";
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
}
<!-- ===========================
     Coach Form Section
=========================== -->
<form enctype="multipart/form-data" id="coachForm">
    <div class="content-area">
        <!-- Page Header -->
        <div class="page-header">
            <h1>Add New Coach</h1>
            <div class="breadcrumb">
                <a href="index.html">Home</a> /
                <span>Coaches</span> /
                <span>Add New</span>
            </div>
        </div>

        <!-- Form Card -->
        <div class="form-card">
            <input type="hidden" id="coachId" name="Id" />

            <!-- Form Header -->
            <div class="form-header">
                <h3><i class="fas fa-user-tie"></i> Coach Information</h3>
                <p>Fill in the details below to add a new coach to the system</p>
            </div>

            <!-- Navigation Buttons -->
            <div class="mb-3">
                <a class="button" asp-area="Coach" asp-controller="Coach" asp-action="Index">To Coach Area</a>
                <a class="button" asp-area="Client" asp-controller="Client" asp-action="Index">To Client Area</a>
            </div>

            <!-- Name -->
            <div class="form-group">
                <label for="coachName">Full Name <span class="required">*</span></label>
                <div class="input-group">
                    <i class="fas fa-user"></i>
                    <input type="text" id="coachName" name="Name" placeholder="Enter coach's full name" required />
                </div>
            </div>

            <!-- Title -->
            <div class="form-group">
                <label for="coachTitle">Title <span class="required">*</span></label>
                <div class="input-group">
                    <i class="fas fa-id-badge"></i>
                    <input type="text" id="coachTitle" name="Title" placeholder="e.g., Head Trainer, Yoga Instructor" required />
                </div>
            </div>

            <!-- About -->
            <div class="form-group">
                <label for="coachAbout">About Coach <span class="required">*</span></label>
                <div class="input-group">
                    <i class="fas fa-align-left"></i>
                    <textarea id="coachAbout" name="About" rows="4" placeholder="Write something about coach experience..." required></textarea>
                </div>
            </div>

            <!-- Image Upload -->
            <div class="form-group">
                <label for="coachImage">Profile Image</label>
                <div class="file-upload">
                    <input type="file" id="coachImage" name="CoachImageFile" class="file-input" />
                    <label for="coachImage" class="file-upload-label">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <span>Choose an image file</span>
                    </label>
                    <div id="fileName" class="file-name">No file chosen</div>
                </div>
            </div>

            <!-- Is Active -->
            <div class="form-group">
                <label for="IsActive">
                    <input type="checkbox" id="IsActive" name="IsActive" />
                    Active Coach
                </label>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="reset" class="btn btn-outline" id="RestCoach">
                    <i class="fas fa-undo"></i> Reset
                </button>
                <button type="submit" class="btn btn-primary" id="SaveCoach">
                    Save Coach
                </button>
                <button type="submit" class="btn btn-primary" id="UpdateCoach">
                    Update Coach
                </button>
            </div>
        </div>
    </div>
</form>

<!-- ===========================
     Search & Table Section
=========================== -->
<div class="container-fluid mt-4">
    <!-- Search -->
    <div class="d-flex justify-content-end mb-3">
        <input type="text" class="form-control w-25" id="searchInput" placeholder="Search records..." />
    </div>

    <!-- Data Table -->
    <div class="table-responsive">
        <table class="table table-bordered data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Title</th>
                    <th>About</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="Data"></tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav>
        <ul class="pagination" id="pagination"></ul>
    </nav>
</div>

@section Scripts {
    <script src="~/ViewJs/Coach.js"></script>
}
