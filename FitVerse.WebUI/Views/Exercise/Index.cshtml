@{
    ViewData["Title"] = "Exercise Library";
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
    ViewBag.PageTitle = "Exercise Library";
}

<!-- Exercise Library Page -->
<div class="page-container">
    <div class="content-wrapper">
        <div class="exercise-page-container">
            <!-- Page Header -->
            <div class="page-header-section">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="page-header-content">
                                <h1 class="page-title">
                                    <i class="bi bi-lightning-charge me-3"></i>Exercise Library
                                </h1>
                                <p class="page-subtitle">Manage your custom exercises and build comprehensive workout routines</p>
                            </div>
                        </div>
                        <div class="col-lg-4 text-lg-end">
                            <button class="btn btn-modern-primary" data-bs-toggle="modal" data-bs-target="#addExerciseModal">
                                <i class="bi bi-plus-circle me-2"></i>Add New Exercise
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search and Filters Section -->
            <div class="search-section">
                <div class="container-fluid">
                    <div class="search-card">
                        <div class="row g-3 align-items-center">
                            <div class="col-md-6 col-lg-4">
                                <div class="search-input-wrapper">
                                    <i class="bi bi-search search-icon"></i>
                                    <input type="text" id="searchInput" class="form-control modern-search-input" 
                                           placeholder="Search exercises by name, muscle, or equipment...">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-8">
                                <div class="search-stats">
                                    <span class="stats-text">
                                        <i class="bi bi-collection me-2"></i>
                                        <span id="exerciseCount">Loading...</span> exercises available
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Exercise Cards Section -->
            <div class="exercises-section">
                <div class="container-fluid">
                    <div class="exercises-grid" id="exerciseContainer">
                        <!-- Loading State -->
                        <div class="loading-state" id="loadingState">
                            <div class="loading-spinner">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading exercises...</span>
                                </div>
                            </div>
                            <p class="loading-text">Loading your exercise library...</p>
                        </div>
                        <!-- Cards load dynamically -->
                    </div>

                    <!-- Pagination -->
                    <div class="pagination-section">
                        <nav aria-label="Exercise pagination">
                            <ul class="pagination modern-pagination" id="exercisePagination">
                                <!-- Pagination loads dynamically -->
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Add/Edit Exercise Modal -->
<div class="modal fade" id="addExerciseModal" tabindex="-1" aria-labelledby="addExerciseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                    <div class="modal-title-content">
                        <h5 class="modal-title" id="addExerciseModalLabel">Add / Edit Exercise</h5>
                        <p class="modal-subtitle">Create or modify exercise details for your library</p>
                    </div>
                </div>
                <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="modal-body modern-modal-body">
                <form id="exerciseForm" class="modern-form" enctype="multipart/form-data">
                    <input type="hidden" id="exerciseId" />

                    <!-- Exercise Name -->
                    <div class="form-group">
                        <label class="form-label modern-form-label" for="Name">
                            <i class="bi bi-tag me-2"></i>Exercise Name
                        </label>
                        <input type="text" class="form-control modern-form-control" id="Name" name="Name" 
                               placeholder="e.g., Barbell Bench Press" required>
                        <div class="form-help">Enter a descriptive name for the exercise</div>
                    </div>

                    <!-- Muscle Group and Equipment -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label modern-form-label" for="muscleId">
                                    <i class="bi bi-person-arms-up me-2"></i>Muscle Group
                                </label>
                                <select class="form-select modern-form-control" id="muscleId" name="muscleId" required>
                                    <option value="" disabled selected>Select muscle group</option>
                                </select>
                                <div class="form-help">Choose the primary muscle targeted</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label modern-form-label" for="equipmentId">
                                    <i class="bi bi-tools me-2"></i>Equipment
                                </label>
                                <select class="form-select modern-form-control" id="equipmentId" name="equipmentId" required>
                                    <option value="" disabled selected>Select equipment</option>
                                </select>
                                <div class="form-help">Choose required equipment</div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label class="form-label modern-form-label" for="description">
                            <i class="bi bi-text-paragraph me-2"></i>Exercise Description
                        </label>
                        <textarea class="form-control modern-form-control" id="description" name="description" rows="4"
                                  placeholder="Detailed instructions for performing the exercise..."></textarea>
                        <div class="form-help">Provide step-by-step instructions for proper form</div>
                    </div>

                    <!-- Video and Image -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label modern-form-label" for="videoLink">
                                    <i class="bi bi-camera-video me-2"></i>Video URL <span class="text-muted">(Optional)</span>
                                </label>
                                <input type="url" class="form-control modern-form-control" id="videoLink" name="videoLink" 
                                       placeholder="https://youtube.com/watch?v=...">
                                <div class="form-help">Add a demonstration video link</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label modern-form-label" for="exerciseImage">
                                    <i class="bi bi-image me-2"></i>Exercise Image <span class="text-muted">(Optional)</span>
                                </label>
                                <input type="file" class="form-control modern-form-control" id="exerciseImage" name="exerciseImage" accept="image/*">
                                <div class="form-help">Upload an exercise demonstration image</div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer modern-modal-footer">
                <button type="button" class="btn btn-outline-secondary modern-btn" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="submit" form="exerciseForm" class="btn btn-primary modern-btn" id="saveBtn">
                    <i class="bi bi-check-circle me-2"></i>Save Exercise
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ViewJs/exercise.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

}
